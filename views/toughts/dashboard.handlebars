<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/toughts/add" class="btn">Criar Pensamento</a>
    </div>
    
    <h3>Seus Pensamentos: <span>{{numToughts}}</span> cadastrado(s)</h3>
    
    <ul>
        {{#each toughts}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/toughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/toughts/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
    {{#if emptyToughts}}
        <p>Voce nao tem nenhum pensamento. <a href="/toughts/add">Clique aqui</a> para adicionar</p>
    {{/if}}
</div>